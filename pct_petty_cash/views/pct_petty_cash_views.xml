<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Expense Line Form View -->
    <record id="pct_petty_cash_expense_view_form" model="ir.ui.view">
        <field name="name">pct.petty.cash.expense.form</field>
        <field name="model">pct.petty.cash.expense</field>
        <field name="arch" type="xml">
            <form string="Expense Details">
                <header>
                    <button name="action_post" type="object" string="Post"
                            class="btn-primary"
                            invisible="state == 'posted'"
                            groups="pct_petty_cash.group_petty_cash_accountant"/>
                    <button name="action_view_move" type="object" string="View Journal Entry"
                            class="btn-secondary"
                            invisible="not move_id"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <group>
                        <group string="Expense Information">
                            <field name="petty_cash_id" readonly="1"/>
                            <field name="expense_date" readonly="state == 'posted'"/>
                            <field name="product_id" options="{'no_create': True}"
                                   readonly="state == 'posted'"/>
                            <field name="description" readonly="state == 'posted'"/>
                        </group>
                        <group string="Amounts">
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" readonly="state == 'posted'"/>
                            <field name="account_id"
                                   readonly="state == 'posted'"
                                   groups="pct_petty_cash.group_petty_cash_accountant"/>
                            <field name="account_id" readonly="1"
                                   groups="!pct_petty_cash.group_petty_cash_accountant"/>
                            <field name="analytic_distribution" widget="analytic_distribution"
                                   groups="analytic.group_analytic_accounting"
                                   readonly="state == 'posted'"/>
                            <field name="move_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Receipts">
                        <field name="attachment_ids" widget="many2many_binary" nolabel="1"
                               readonly="state == 'posted'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Petty Cash Form View -->
    <record id="pct_petty_cash_view_form" model="ir.ui.view">
        <field name="name">pct.petty.cash.form</field>
        <field name="model">pct.petty.cash</field>
        <field name="arch" type="xml">
            <form string="Petty Cash">
                <header>
                    <button name="action_set_running" type="object"
                            string="Set to Running" class="btn-primary"
                            invisible="state != 'draft'"
                            groups="pct_petty_cash.group_petty_cash_accountant"/>
                    <button name="action_set_closed" type="object"
                            string="Close" class="btn-secondary"
                            invisible="state != 'running'"
                            groups="pct_petty_cash.group_petty_cash_manager"/>
                    <button name="action_set_draft" type="object"
                            string="Reset to Draft" class="btn-secondary"
                            invisible="state == 'draft'"
                            groups="pct_petty_cash.group_petty_cash_manager"/>
                    <button name="%(action_allocation_wizard)d" type="action"
                            string="Request Allocation" class="btn-primary"
                            invisible="state == 'closed'"
                            context="{'default_petty_cash_id': id}"/>
                    <button name="%(action_expense_wizard)d" type="action"
                            string="Record Expense" class="btn-primary"
                            invisible="state == 'closed'"
                            context="{'default_petty_cash_id': id}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Office Petty Cash"
                                   readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="journal_id"
                                   options="{'no_create': True}"
                                   readonly="state != 'draft'"
                                   groups="pct_petty_cash.group_petty_cash_accountant"/>
                            <field name="journal_id" readonly="1"
                                   groups="!pct_petty_cash.group_petty_cash_accountant"/>
                            <field name="custodian_account_id" readonly="1"/>
                            <field name="amount_left" readonly="1" class="oe_subtotal_footer_separator"/>
                            <field name="amount_brought_forward" readonly="1"/>
                        </group>
                        <group string="Amounts">
                            <field name="custodian_id"
                                   readonly="state != 'draft'"
                                   groups="pct_petty_cash.group_petty_cash_accountant"/>
                            <field name="custodian_id" readonly="1"
                                   groups="!pct_petty_cash.group_petty_cash_accountant"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_allocated" readonly="1"/>
                            <field name="amount_expensed" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Allocations" name="allocations">
                            <field name="allocation_line_ids"
                                   readonly="state == 'closed'"
                                   groups="pct_petty_cash.group_petty_cash_accountant">
                                <list string="Allocations" editable="bottom" >
                                    <field name="payment_date"/>
                                    <field name="amount" sum="Total Allocated"/>
                                    <field name="source_journal_id" options="{'no_create': True}"/>
                                    <field name="source_account_id" readonly="1"/>
                                    <field name="analytic_distribution" widget="analytic_distribution"
                                           groups="analytic.group_analytic_accounting"
                                           optional="show"/>
                                    <field name="move_id" readonly="1" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'posted'"
                                           decoration-info="state == 'draft'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="company_id" column_invisible="1"/>
                                    <button name="action_post" type="object" string="Post"
                                            class="btn-primary"
                                            invisible="state == 'posted'"
                                            groups="pct_petty_cash.group_petty_cash_accountant"/>
                                    <button name="action_view_move" type="object" string="View Entry"
                                            class="btn-link"
                                            invisible="not move_id"/>
                                </list>
                            </field>
                            <field name="allocation_line_ids" readonly="1"
                                   groups="!pct_petty_cash.group_petty_cash_accountant">
                                <list string="Allocations" >
                                    <field name="payment_date"/>
                                    <field name="amount" sum="Total Allocated"/>
                                    <field name="source_journal_id"/>
                                    <field name="source_account_id"/>
                                    <field name="analytic_distribution" widget="analytic_distribution"
                                           groups="analytic.group_analytic_accounting"
                                           optional="show"/>
                                    <field name="move_id" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'posted'"
                                           decoration-info="state == 'draft'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Expenses" name="expenses">
                            <field name="expense_line_ids"
                                   readonly="state == 'closed'"
                                   groups="pct_petty_cash.group_petty_cash_accountant">
                                <list string="Expenses" editable="bottom">
                                    <field name="expense_date"/>
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Total Expensed"/>
                                    <field name="account_id" readonly="state == 'posted'"/>
                                    <field name="analytic_distribution" widget="analytic_distribution"
                                           groups="analytic.group_analytic_accounting"
                                           optional="show"/>
                                    <field name="attachment_ids" widget="many2many_binary" optional="show"/>
                                    <field name="move_id" readonly="1" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'posted'"
                                           decoration-info="state == 'draft'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="company_id" column_invisible="1"/>
                                    <button name="action_open_form" type="object" string="Open"
                                            class="btn-link" icon="fa-external-link"/>
                                    <button name="action_post" type="object" string="Post"
                                            class="btn-primary"
                                            invisible="state == 'posted'"
                                            groups="pct_petty_cash.group_petty_cash_accountant"/>
                                    <button name="action_view_move" type="object" string="View Entry"
                                            class="btn-link"
                                            invisible="not move_id"/>
                                </list>
                            </field>
                            <field name="expense_line_ids" readonly="1"
                                   groups="!pct_petty_cash.group_petty_cash_accountant">
                                <list string="Expenses">
                                    <field name="expense_date"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Total Expensed"/>
                                    <field name="account_id"/>
                                    <field name="analytic_distribution" widget="analytic_distribution"
                                           groups="analytic.group_analytic_accounting"
                                           optional="show"/>
                                    <field name="attachment_ids" widget="many2many_binary" optional="show"/>
                                    <field name="move_id" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'posted'"
                                           decoration-info="state == 'draft'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <button name="action_open_form" type="object" string="Open"
                                            class="btn-link" icon="fa-external-link"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Petty Cash Tree View -->
    <record id="pct_petty_cash_view_tree" model="ir.ui.view">
        <field name="name">pct.petty.cash.tree</field>
        <field name="model">pct.petty.cash</field>
        <field name="arch" type="xml">
            <list string="Petty Cash" decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="custodian_id" widget="many2one_avatar_user"/>
                <field name="journal_id"/>
                <field name="amount_brought_forward" optional="hide"/>
                <field name="amount_allocated" sum="Total Allocated"/>
                <field name="amount_expensed" sum="Total Expensed"/>
                <field name="amount_left" sum="Total Left" decoration-danger="amount_left &lt; 0"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'running'"
                       decoration-muted="state == 'closed'"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Petty Cash Search View -->
    <record id="pct_petty_cash_view_search" model="ir.ui.view">
        <field name="name">pct.petty.cash.search</field>
        <field name="model">pct.petty.cash</field>
        <field name="arch" type="xml">
            <search string="Search Petty Cash">
                <field name="name"/>
                <field name="custodian_id"/>
                <field name="journal_id"/>
                <filter string="My Petty Cash" name="my_petty_cash"
                        domain="[('custodian_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Custodian" name="group_custodian" context="{'group_by': 'custodian_id'}"/>
                    <filter string="Journal" name="group_journal" context="{'group_by': 'journal_id'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Petty Cash Action -->
    <record id="action_pct_petty_cash" model="ir.actions.act_window">
        <field name="name">Petty Cash</field>
        <field name="res_model">pct.petty.cash</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="pct_petty_cash_view_search"/>
        <field name="context">{'search_default_running': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first petty cash record
            </p>
            <p>
                Manage petty cash custodians, track allocations and expenses.
            </p>
        </field>
    </record>

    <!-- My Petty Cash Action (for users) -->
    <record id="action_my_petty_cash" model="ir.actions.act_window">
        <field name="name">My Petty Cash</field>
        <field name="res_model">pct.petty.cash</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="pct_petty_cash_view_search"/>
        <field name="domain">[('custodian_id', '=', uid)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No petty cash assigned to you
            </p>
            <p>
                Contact your administrator to assign you a petty cash custodian role.
            </p>
        </field>
    </record>

</odoo>
