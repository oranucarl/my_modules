<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Root Menu -->
    <menuitem id="menu_petty_cash_root"
              name="Petty Cash"
              web_icon="pct_petty_cash,static/description/module.png"
              sequence="45"
              groups="group_petty_cash_user"/>

    <!-- My Petty Cash Menu (for all users) -->
    <menuitem id="menu_my_petty_cash"
              name="My Petty Cash"
              parent="menu_petty_cash_root"
              action="action_my_petty_cash"
              sequence="10"
              groups="group_petty_cash_user"/>

    <!-- All Petty Cash Menu (for accountants and managers) -->
    <menuitem id="menu_all_petty_cash"
              name="All Petty Cash"
              parent="menu_petty_cash_root"
              action="action_pct_petty_cash"
              sequence="20"
              groups="group_petty_cash_accountant"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_petty_cash_config"
              name="Configuration"
              parent="menu_petty_cash_root"
              sequence="100"
              groups="group_petty_cash_manager"/>

    <!-- Settings Menu -->
    <menuitem id="menu_petty_cash_settings"
              name="Settings"
              parent="menu_petty_cash_config"
              action="action_petty_cash_config_settings"
              sequence="10"
              groups="group_petty_cash_manager"/>

    <!-- Expense Categories Action (Service Products) -->
    <record id="action_petty_cash_expense_categories" model="ir.actions.act_window">
        <field name="name">Expense Categories</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('type', '=', 'service')]</field>
        <field name="context">{'default_type': 'service', 'default_detailed_type': 'service'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense category
            </p>
            <p>
                Define service products to categorize petty cash expenses.
            </p>
        </field>
    </record>

    <!-- Expense Categories Menu -->
    <menuitem id="menu_petty_cash_expense_categories"
              name="Expense Categories"
              parent="menu_petty_cash_config"
              action="action_petty_cash_expense_categories"
              sequence="20"
              groups="group_petty_cash_manager"/>

    <!-- Petty Cash Menu under Accounting > Vendors -->
    <menuitem id="menu_petty_cash_accounting_vendors"
              name="Petty Cash"
              parent="account.menu_finance_payables"
              action="action_pct_petty_cash"
              sequence="50"
              groups="group_petty_cash_accountant"/>

    <!-- Reporting Menu in Petty Cash Module -->
    <menuitem id="menu_petty_cash_reporting"
              name="Reporting"
              parent="menu_petty_cash_root"
              sequence="50"
              groups="group_petty_cash_user"/>

    <!-- Cash Report Menu in Petty Cash Module -->
    <menuitem id="menu_petty_cash_cash_report"
              name="Cash Report"
              parent="menu_petty_cash_reporting"
              action="action_cash_report_wizard"
              sequence="10"
              groups="group_petty_cash_user"/>

    <!-- Cash Report Menu under Accounting > Vendors (below Petty Cash) -->
    <menuitem id="menu_petty_cash_cash_report_accounting"
              name="Petty Cash Report"
              parent="account.menu_finance_payables"
              action="action_cash_report_wizard"
              sequence="51"
              groups="group_petty_cash_accountant"/>

</odoo>
