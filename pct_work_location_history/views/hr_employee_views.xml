<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Employee Form View to add Work Location History button in button box -->
    <record id="view_employee_form_inherit_work_location_history" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.work.location.history</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add the work location history stat button in the button box -->
            <div name="button_box" position="inside">
                <button name="action_view_work_location_history"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-history"
                        title="View Work Location History">
                    <field name="work_location_history_count" widget="statinfo" string="Location History"/>
                </button>
            </div>
        </field>
    </record>

</odoo>
