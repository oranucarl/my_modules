<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============= List (Tree) View ============= -->
    <record id="view_branch_list" model="ir.ui.view">
        <field name="name">branch.list</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="analytic_distribution_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ============= Form View ============= -->
    <record id="view_branch_form" model="ir.ui.view">
        <field name="name">branch.form</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <form string="Branch">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Analytic Distribution" groups="analytic.group_analytic_accounting">
                        <field name="analytic_distribution_id"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============= Search View ============= -->
    <record id="view_branch_search" model="ir.ui.view">
        <field name="name">branch.search</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <search string="Branch">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============= Pricelist View ============= -->
    <record id="view_branch_pricelist_form" model="ir.ui.view">
        <field name="name">branch.pricelist.form</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='country_group_ids']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============= Sales Report View ============= -->
    <record id="view_branch_sales_report_list" model="ir.ui.view">
        <field name="name">branch.sales.report.list</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.sale_report_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- ============= Action ============= -->
    <record id="branch_action" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="res_model">res.branch</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_branch_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first branch
            </p>
            <p>
                Branches allow you to organize your operations by location.
            </p>
        </field>
    </record>

    <!-- ============= Menu Item ============= -->
    <menuitem id="pct_menu_branch"
              name="Branches"
              parent="base.menu_users"
              action="branch_action"
              sequence="10"/>
</odoo>
