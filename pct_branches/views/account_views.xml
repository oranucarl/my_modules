<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- account.move Form View -->
    <!-- ============================================================ -->
    <record id="view_move_form_branch" model="ir.ui.view">
        <field name="name">account.move.form.branch</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='ref'][2]" position="after">
                <field name="branch_id"
                    options="{'no_open': True, 'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"
                    readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- account.move List View -->
    <!-- ============================================================ -->
    <record id="view_move_tree_branch" model="ir.ui.view">
        <field name="name">account.move.tree.branch</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- account.payment Form View -->
    <!-- ============================================================ -->
    <record id="view_account_payment_form_branch" model="ir.ui.view">
        <field name="name">account.payment.form.branch</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[@name='main_group']/group[@name='group2']/field[@name='partner_bank_id'][3]" position="after">
                <field name="branch_id"
                    options="{'no_open': True, 'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"
                    readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>

