<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- hr.payslip Form View -->
    <!-- ============================================================ -->
    <record id="view_hr_payslip_form_branch" model="ir.ui.view">
        <field name="name">hr.payslip.form.branch</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- hr.payslip List View -->
    <!-- ============================================================ -->
    <record id="view_hr_payslip_tree_branch" model="ir.ui.view">
        <field name="name">hr.payslip.tree.branch</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- hr.payslip.run Form View -->
    <!-- ============================================================ -->
    <record id="hr_payslip_run_form_branch" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.branch</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- hr.payslip.run List View -->
    <!-- ============================================================ -->
    <record id="hr_payslip_run_tree_branch" model="ir.ui.view">
        <field name="name">hr.payslip.run.tree.branch</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
