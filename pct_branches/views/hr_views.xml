<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- hr.employee Form View -->
    <!-- ============================================================ -->
    <record id="view_employee_form_branch" model="ir.ui.view">
        <field name="name">hr.employee.form.branch</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- hr.contract Form View -->
    <!-- ============================================================ -->
    <record id="hr_contract_view_form_branch" model="ir.ui.view">
        <field name="name">hr.contract.form.branch</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
