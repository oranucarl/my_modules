<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- pos.order Form View -->
    <!-- ============================================================ -->
    <record id="view_pos_pos_form_branch" model="ir.ui.view">
        <field name="name">pos.order.form.branch</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- pos.session Form View -->
    <!-- ============================================================ -->
    <record id="view_pos_session_form_branch" model="ir.ui.view">
        <field name="name">pos.session.form.branch</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='config_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
