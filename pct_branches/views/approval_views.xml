<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- approval.category Form View -->
    <!-- ============================================================ -->
    <record id="approval_category_form_branch" model="ir.ui.view">
        <field name="name">approval.category.form.branch</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- approval.request Form View -->
    <!-- ============================================================ -->
    <record id="approval_request_form_branch" model="ir.ui.view">
        <field name="name">approval.request.form.branch</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- approval.request List View -->
    <!-- ============================================================ -->
    <record id="approval_request_tree_branch" model="ir.ui.view">
        <field name="name">approval.request.tree.branch</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
