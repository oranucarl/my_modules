<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_partner_form_inherit_b2b_page" model="ir.ui.view">
    <field name="name">res.partner.form.b2b.categorization.page</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="priority" eval="1000"/>
    <field name="arch" type="xml">
      <xpath expr="//form//sheet//notebook" position="inside">
        <page name="b2b_categorization" string="B2B Categorization">
          <group col="2">
            <field name="b2b_category_ids"
                   widget="many2many_tags"
                   options="{'color_field': 'color'}"/>
            <field name="b2b_total_spend" readonly="1"/>
            <field name="b2b_progress_pct"
                   readonly="1"
                   widget="progressbar"
                   options="{'max_value': 100}"/>
            <field name="b2b_last_notification_datetime" readonly="1"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
