<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- List view -->
  <record id="view_b2b_category_tree" model="ir.ui.view">
    <field name="name">b2b.category.list</field>
    <field name="model">b2b.category</field>
    <field name="arch" type="xml">
      <list>
        <field name="active"/>
        <field name="name"/>
        <field name="color" widget="colorpicker"/>
        <field name="lower_limit"/>
        <field name="upper_limit"/>
        <field name="description"/>
      </list>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_b2b_category_form" model="ir.ui.view">
    <field name="name">b2b.category.form</field>
    <field name="model">b2b.category</field>
    <field name="arch" type="xml">
      <form string="B2B Category">
        <sheet>
          <group>
            <group>
              <field name="active"/>
              <field name="name"/>
              <field name="code"/>
              <field name="description"/>
            </group>
            <group>
              <field name="color" widget="colorpicker"/>
              <field name="lower_limit"/>
              <field name="upper_limit"/>
              <field name="currency_id" groups="base.group_no_one"/>
            </group>
          </group>
          <notebook>
            <page string="Notifications">
              <field name="contact_line_ids">
                <list editable="bottom">
                  <field name="partner_id"/>
                  <field name="email" readonly="1"/>
                  <field name="notify_active"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_b2b_category" model="ir.actions.act_window">
    <field name="name">B2B Categories</field>
    <field name="res_model">b2b.category</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_b2b_categories"
            name="B2B Categories"
            parent="crm.crm_menu_config"
            action="action_b2b_category"
            sequence="7"
            groups="sales_team.group_sale_manager"/>
</odoo>
