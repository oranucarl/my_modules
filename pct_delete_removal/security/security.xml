<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Privilege for delete access groups -->
        <record id="privilege_delete_access" model="res.groups.privilege">
            <field name="name">Delete Access</field>
            <field name="sequence">100</field>
        </record>

        <!-- Group that allows users to delete records -->
        <record id="group_delete_records" model="res.groups">
            <field name="name">Delete Records</field>
            <field name="privilege_id" ref="privilege_delete_access"/>
            <field name="comment">Users in this group can delete records across the system.</field>
        </record>
    </data>
</odoo>
