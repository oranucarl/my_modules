<odoo>
    <record id="view_purchase_request_on_hold_wizard_form" model="ir.ui.view">
        <field name="name">purchase.request.on.hold.wizard.form</field>
        <field name="model">purchase.request.on.hold.wizard</field>
        <field name="arch" type="xml">
            <form string="Put Purchase Request On Hold">
                <group>
                    <field name="purchase_request_id" />
                    <field name="previous_state" />
                    <field name="on_hold_reason" placeholder="Please provide a reason for putting this request on hold..." />
                </group>
                <footer>
                    <button
                        name="action_put_on_hold"
                        string="Put On Hold"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
