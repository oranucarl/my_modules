<odoo>
    <record id="view_purchase_request_check_availability_wizard_form" model="ir.ui.view">
        <field name="name">purchase.request.check.availability.wizard.form</field>
        <field name="model">purchase.request.check.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Check Availability">
                <group>
                    <field name="purchase_request_id" readonly="1" />
                </group>
                <group string="Available Stock">
                    <p class="text-muted">
                        Below are all locations across all warehouses with available stock for each product.
                        Enter the quantity to transfer from each location.
                    </p>
                </group>
                <field name="line_ids">
                    <list editable="bottom">
                        <field name="product_id" readonly="1" />
                        <field name="warehouse_id" readonly="1" />
                        <field name="location_id" options="{'no_create': True}" />
                        <field name="available_qty" readonly="1" />
                        <field name="requested_qty" readonly="1" />
                        <field name="transfer_qty" />
                        <field name="pr_line_id" column_invisible="1" />
                    </list>
                </field>
                <footer>
                    <button
                        name="action_convert_to_transfer"
                        string="Convert to Direct Transfer"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_request_check_availability" model="ir.actions.act_window">
        <field name="name">Check Availability</field>
        <field name="res_model">purchase.request.check.availability.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
